<Page
    x:Class="Classify.WinUI.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Classify.WinUI.ViewModels"
    mc:Ignorable="d">

    <Grid Padding="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
            <TextBlock Text="Bienvenue dans Classify" FontSize="28" FontWeight="SemiBold" />
        </StackPanel>

        <StackPanel Grid.Row="1" Spacing="16">
            <TextBlock Text="Matières" FontSize="20" FontWeight="SemiBold" />

            <ListView ItemsSource="{Binding Subjects}"
                      IsItemClickEnabled="True"
                      ItemClick="OnSubjectClick"
                      SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="vm:SubjectItemViewModel">
                        <Grid Padding="16" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="12">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="{x:Bind Emoji}" FontSize="24" />
                                <StackPanel>
                                    <TextBlock Text="{x:Bind Name}" FontSize="18" FontWeight="SemiBold" />
                                    <TextBlock Text="{x:Bind Id}" Opacity="0.5" FontSize="12" />
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button Content="Créer une matière" Click="OnCreateSubjectClick" Width="220" />
        </StackPanel>
    </Grid>
</Page>
