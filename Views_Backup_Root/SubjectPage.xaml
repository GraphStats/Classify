<Page
    x:Class="Classify.WinUI.Views.SubjectPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Classify.WinUI.Models"
    mc:Ignorable="d">

    <Grid Padding="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Spacing="12">
            <TextBlock Text="{Binding Emoji}" FontSize="30" />
            <StackPanel>
                <TextBlock Text="{Binding Name}" FontSize="24" FontWeight="SemiBold" />
                <TextBlock Text="Cours et dossiers" Opacity="0.6" />
            </StackPanel>
            <Button Content="Ajouter un cours" Click="OnAddCourseClick" Margin="24,0,0,0" />
            <Button Content="Supprimer la matiÃ¨re" Click="OnDeleteSubjectClick" Foreground="Tomato" Margin="12,0,0,0" />
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Spacing="8">
                <TextBlock Text="Cours" FontSize="18" FontWeight="SemiBold" />
                <ListView ItemsSource="{Binding Courses}" SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:Course">
                            <Grid Padding="12" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="10">
                                <StackPanel Spacing="4">
                                    <TextBlock Text="{x:Bind Name}" FontSize="18" FontWeight="SemiBold" />
                                    <TextBlock Text="{x:Bind Description}" Opacity="0.7" TextWrapping="Wrap" />
                                    <TextBlock Text="{x:Bind FilePath}" Opacity="0.5" FontSize="12" />
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <Button Content="Ouvrir" Click="OnOpenCourseClick" Tag="{x:Bind Id}" />
                                        <Button Content="Supprimer" Click="OnDeleteCourseClick" Tag="{x:Bind Id}" Foreground="Tomato" />
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>

            <StackPanel Grid.Column="1" Spacing="8" Margin="16,0,0,0">
                <TextBlock Text="Notes" FontSize="18" FontWeight="SemiBold" />
                <TextBox Text="{Binding Notes, Mode=TwoWay}" AcceptsReturn="True" Height="200" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
