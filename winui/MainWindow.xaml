<Window
    x:Class="Classify.WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Classify">

    <Grid>
        <NavigationView x:Name="NavView"
                        PaneDisplayMode="Left"
                        IsBackButtonVisible="Collapsed"
                        IsSettingsVisible="True"
                        Header="Classify"
                        ItemInvoked="NavView_ItemInvoked"
                        Loaded="NavView_Loaded">
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Tableau de bord" Icon="Home" Tag="home" />
                <NavigationViewItem Content="Calendrier" Icon="Calendar" Tag="calendar" />
                <NavigationViewItem Content="Nouvelle matiÃ¨re" Icon="Add" Tag="add_subject" Foreground="{ThemeResource SystemControlBackgroundAccentBrush}" />
            </NavigationView.MenuItems>

            <NavigationView.PaneFooter>
                <!-- Simple list for subjects if needed, but for now let's keep it simple -->
            </NavigationView.PaneFooter>

            <Frame x:Name="ContentFrame" Margin="24">
                <Frame.ContentTransitions>
                    <TransitionCollection>
                        <NavigationThemeTransition />
                    </TransitionCollection>
                </Frame.ContentTransitions>
            </Frame>
        </NavigationView>
    </Grid>
</Window>
