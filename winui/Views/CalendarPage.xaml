<Page
    x:Class="Classify.WinUI.Views.CalendarPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Classify.WinUI.Models"
    mc:Ignorable="d">

    <Grid Padding="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Spacing="8" Margin="0,0,0,32">
            <TextBlock Text="Calendrier de Révision" FontSize="36" FontWeight="Bold" />
            <TextBlock Text="Planifiez vos sessions d'étude et suivez vos progrès." Opacity="0.6" FontSize="16" />
        </StackPanel>

        <Grid Grid.Row="1" ColumnSpacing="32">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="400" />
            </Grid.ColumnDefinitions>

            <!-- Calendar section -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="16" Padding="12">
                <CalendarView x:Name="Planner"
                              SelectedDatesChanged="OnSelectedDatesChanged"
                              SelectionMode="Single"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              BorderThickness="0" />
            </Border>

            <!-- Events section -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Text="Révisions du jour" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,16" />

                <ListView Grid.Row="1" x:Name="EventsList" SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:RevisionEvent">
                            <Grid Margin="0,0,0,12" Padding="16" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Spacing="4" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding Date}" Opacity="0.6" FontSize="12" />
                                </StackPanel>
                                
                                <ToggleSwitch Grid.Column="1" IsOn="{Binding IsDone, Mode=TwoWay}" Toggled="OnEventToggled" OnContent="" OffContent="" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Button Grid.Row="2" Content="Ajouter une révision" Click="OnAddEventClick" Style="{StaticResource AccentButtonStyle}" HorizontalAlignment="Stretch" Margin="0,16,0,0" Padding="0,12" />
            </Grid>
        </Grid>
    </Grid>
</Page>
