<Page
    x:Class="Classify.WinUI.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Padding="32" Spacing="16">
        <TextBlock Text="Paramètres" FontSize="24" FontWeight="SemiBold" />

        <ComboBox x:Name="ThemeCombo" Header="Thème" SelectedIndex="0">
            <ComboBoxItem Content="Clair" Tag="light" />
            <ComboBoxItem Content="Sombre" Tag="dark" />
            <ComboBoxItem Content="Auto" Tag="auto" />
        </ComboBox>

        <TextBox x:Name="NameBox" Header="Votre nom" />

        <Button Content="Enregistrer" Click="OnSaveClick" Style="{StaticResource AccentButtonStyle}" Width="140" />
    </StackPanel>
</Page>
