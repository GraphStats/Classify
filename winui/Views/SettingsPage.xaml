<Page
    x:Class="Classify.WinUI.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="40" Spacing="32" MaxWidth="800" HorizontalAlignment="Left">
            <StackPanel Spacing="8">
                <TextBlock Text="Paramètres" FontSize="36" FontWeight="Bold" />
                <TextBlock Text="Personnalisez votre expérience Classify." Opacity="0.6" FontSize="16" />
            </StackPanel>

            <!-- Appearance Section -->
            <StackPanel Spacing="16">
                <TextBlock Text="Apparence" FontSize="20" FontWeight="SemiBold" />
                
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="12" Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel VerticalAlignment="Center" Spacing="4">
                            <TextBlock Text="Thème de l'application" FontWeight="SemiBold" />
                            <TextBlock Text="Choisissez entre le mode clair, sombre ou l'adaptation système." Opacity="0.6" FontSize="12" />
                        </StackPanel>
                        <ComboBox Grid.Column="1" x:Name="ThemeCombo" Width="150" SelectionChanged="OnThemeChanged">
                            <ComboBoxItem Content="Clair" Tag="light" />
                            <ComboBoxItem Content="Sombre" Tag="dark" />
                            <ComboBoxItem Content="Auto" Tag="auto" />
                        </ComboBox>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- User Profile Section -->
            <StackPanel Spacing="16">
                <TextBlock Text="Profil" FontSize="20" FontWeight="SemiBold" />
                
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="12" Padding="20">
                    <StackPanel Spacing="12">
                        <TextBox x:Name="NameBox" Header="Votre nom d'utilisateur" PlaceholderText="Entrez votre nom" />
                        <TextBlock Text="Ce nom sera affiché sur le tableau de bord." Opacity="0.6" FontSize="12" />
                    </StackPanel>
                </Border>
            </StackPanel>

            <Button Content="Enregistrer les modifications" Click="OnSaveClick" Style="{StaticResource AccentButtonStyle}" Padding="24,12" />
            
            <TextBlock Text="Classify v8.0.4 - Drayko" Opacity="0.4" FontSize="12" HorizontalAlignment="Center" Margin="0,40,0,0" />
        </StackPanel>
    </ScrollViewer>
</Page>
