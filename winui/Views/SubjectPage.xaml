<Page
    x:Class="Classify.WinUI.Views.SubjectPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Classify.WinUI.Models"
    mc:Ignorable="d">

    <Grid Padding="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Margin="0,0,0,32">
            <StackPanel Orientation="Horizontal" Spacing="20">
                <Border Width="64" Height="64" CornerRadius="16" Background="{ThemeResource SystemControlBackgroundAccentBrush}">
                    <TextBlock Text="{Binding Emoji}" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
                <StackPanel VerticalAlignment="Center" Spacing="2">
                    <TextBlock Text="{Binding Name}" FontSize="32" FontWeight="Bold" />
                    <TextBlock Text="Gestion des documents et ressources" Opacity="0.6" />
                </StackPanel>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Spacing="12">
                <Button Content="Ajouter un cours" Click="OnAddCourseClick" Style="{StaticResource AccentButtonStyle}" />
                <Button Content="Paramètres" Background="Transparent" BorderThickness="0">
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Text="Renommer" Icon="Edit" />
                            <MenuFlyoutItem Text="Supprimer" Foreground="Tomato" Click="OnDeleteSubjectClick" Icon="Delete" />
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="350" />
            </Grid.ColumnDefinitions>

            <!-- Courses List -->
            <ScrollViewer Grid.Column="0">
                <StackPanel Spacing="16" Margin="0,0,24,0">
                    <TextBlock Text="Récent" FontSize="18" FontWeight="SemiBold" />
                    <ListView ItemsSource="{Binding Courses}" SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:Course">
                                <Grid Margin="0,0,0,12" Padding="20" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <FontIcon Glyph="&#xE160;" FontSize="24" Margin="0,0,20,0" Foreground="{ThemeResource SystemControlBackgroundAccentBrush}" />
                                    
                                    <StackPanel Grid.Column="1" Spacing="2">
                                        <TextBlock Text="{x:Bind Name}" FontSize="18" FontWeight="SemiBold" />
                                        <TextBlock Text="{x:Bind Description}" Opacity="0.7" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" />
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                                        <Button Content="Ouvrir" Click="OnOpenCourseClick" Tag="{x:Bind Id}" />
                                        <Button Content="&#xE107;" FontFamily="Segoe MDL2 Assets" Click="OnDeleteCourseClick" Tag="{x:Bind Id}" Foreground="Tomato" Background="Transparent" BorderThickness="0" />
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </ScrollViewer>

            <!-- Sidebar (Notes) -->
            <Border Grid.Column="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="16" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Bloc-notes" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,16" />
                    
                    <TextBox Grid.Row="1" 
                             PlaceholderText="Prenez vos notes ici..." 
                             Text="{Binding Notes, Mode=TwoWay}" 
                             AcceptsReturn="True" 
                             BorderThickness="0" 
                             Background="Transparent" />
                    
                    <Button Grid.Row="2" Content="Enregistrer" HorizontalAlignment="Right" Margin="0,16,0,0" />
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
